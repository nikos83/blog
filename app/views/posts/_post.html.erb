
  <tr id="<%= post.id %>">
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.status %></td>
    <td><%= link_to 'Publish', publish_post_path(post), method: :post, remote: true, style: presenter.publish(post) %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
